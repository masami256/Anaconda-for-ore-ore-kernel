import os
import sys
import parted
import _ped

def main(argv):
    lst = set()

    for dev in filter(lambda d: d.type != parted.DEVICE_DM, parted.getAllDevices()):
        lst.add((os.path.basename(dev.path), dev.getSize()))

    lst = list(lst)
    lst.sort()
    for dev, size in lst:
        print dev, size

if __name__ == "__main__":
    main(sys.argv)
